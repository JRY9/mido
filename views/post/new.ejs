<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/css/new.css">

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-auto my-auto pe-0">
                            <a class="btn fa-solid fa-arrow-left" href="/post"></a>
                        </div>
                        <div class="col d-flex align-items-center">
                            <h1 class="heading">New Post</h1>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <form action="/post" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
                                <div class="form-group mb-3">
                                    <label for="topic" class="form-label">Topic</label>
                                    <input type="text" class="form-control" id="topic" placeholder="What's on your mind?"
                                        name="post[topic]" required />
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                    <div class="invalid-feedback">
                                        Please type something.
                                    </div>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="description" class="form-label">Description</label>
                                    <textarea class="form-control" id="description" placeholder="Please describe some thing ..." 
                                    name="post[body]" rows="3" required ></textarea>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                    <div class="invalid-feedback">
                                        Please explain your post.
                                    </div>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="image" class="form-label">Choose image(s)... (Max 5 images)</label>
                                    <input class="form-control image-upload" type="file" id="image" name="image" multiple>
                                </div>
                                <div class="d-grid">
                                    <button class="btn btn-primary">Post</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>