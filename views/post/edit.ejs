<% layout('layouts/boilerplate')%>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col col-auto my-auto pe-0">
                            <a class="btn fa-solid fa-arrow-left" href="/post/<%= postData._id %>"></a>
                        </div>
                        <div class="col d-flex">
                            <h1 class="heading">Edit Post</h1>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <form action="/post/<%= postData._id %>?_method=PUT" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
                                <div class="form-group mb-3">
                                    <label for="topic" class="form-label">Topic</label>
                                    <input type="text" class="form-control" id="topic" placeholder="What's on your mind?"
                                        name="post[topic]" value="<%= postData.topic %>" required />
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                    <div class="invalid-feedback">
                                        Topic can not be bank.
                                    </div>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="description" class="form-label">Description</label>
                                    <input type="text" class="form-control" id="description"
                                        placeholder="Please describe some thing ..." name="post[body]" value="<%= postData.body %>" required />
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                    <div class="invalid-feedback">
                                        Description can not be bank.
                                    </div>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="image" class="form-label">Add/Remove image(s)...</label>
                                    <input class="form-control image-upload" type="file" id="image" name="image" multiple>
                                </div>
                                <div class="form-group mb-3">
                                    <% postData.images.forEach((img, i) => { %>
                                    <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="" crossorigin>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="<%= img.filename %>" name="deleteImages[]" id="image-<%= i %>">
                                        <label class="form-check-label" for="image-<%= i %>">
                                            Delete
                                        </label>
                                    </div>
                                    <% }) %> 
                                </div>
                                <div class="d-grid">
                                    <button class="btn btn-primary">Edit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>